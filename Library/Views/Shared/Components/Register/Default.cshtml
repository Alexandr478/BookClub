

    <div class="register-error-container">
        @await Component.InvokeAsync("RegisterError")
    </div>


    <form name="register-form" class="form-horizontal">
        <div class="form-group">
            <input type="email" class="form-control" id="RegisterInputEmail" placeholder="E-mail">
            <i class="fa fa-user"></i>
            <span></span>
        </div>
        <div class="form-group help">
            <input type="password" class="form-control" id="RegisterInputPassword" placeholder="Введите пароль">
            <i class="fa fa-lock"></i>
            <span></span>
        </div>

        <div class="form-group help">
            <input type="password" class="form-control" id="RegisterInputPasswordRetry" placeholder="Повторите пароль">
            <i class="fa fa-lock"></i>
            <span></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-default">Регистрация</button>
        </div>
    </form>





